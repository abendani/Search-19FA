    <Button
        android:id="@+id/text_to_speech"
        android:layout_width="108dp"
        android:layout_height="55dp"

        android:text="Text-to-speech"
        app:layout_constraintBottom_toTopOf="@+id/translate_button"
        app:layout_constraintLeft_toLeftOf="@+id/translate_button" />

    <Button
        android:id="@+id/picture"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:text="Picture"
        app:layout_constraintBottom_toTopOf="@+id/find"
        app:layout_constraintLeft_toRightOf="@+id/translate_button" />

    <Button
        android:id="@+id/google"
        android:layout_width="108dp"
        android:layout_height="55dp"

        android:text="Google"
        app:layout_constraintBottom_toTopOf="@+id/find"
        app:layout_constraintLeft_toRightOf="@+id/picture" />

    <Button
        android:id="@+id/copy"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:text="Copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/find" />

    <Button
        android:id="@+id/translate_button"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:layout_marginLeft="40dp"

        android:text="Translate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/find"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:text="Find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/translate_button" />

    <Button
        android:id="@+id/new_picture"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:text="New Picture"
    />


    <Button
        android:id="@+id/from_photos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:text="From Photos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/capture_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />


    <Button
        android:id="@+id/capture_image_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:text="From Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/from_photos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homescreen"
        app:layout_constraintBottom_toTopOf="@id/from_photos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

